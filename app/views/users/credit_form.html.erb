<div class='container' id='signupBanner'>
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-4">Credit a user</h1>
    </div>
  </div>
</div>
<div class='container'>
  <div id='signupForm' class='container'>
    <%= form_tag("/admin/credit_wallet",{methods:"post"}) do %>
      <% if @error_message %>
        <div class="alert alert-danger">
          <%= @error_message %>
        </div>
      <% end %>
      <div class="form-group">
        Phone number
        <input class="form-control" name="contact" value='<%= @contact %>'>
      </div>
      <div class="form-group">
        Amount to credit(in &#x20b9;)
        <input class="form-control" name="amount" value='<%= @amount %>'>
      </div>
      <button type="submit" class="btn btn-primary">Credit</button>
    <% end %>
  </div>
</div>
