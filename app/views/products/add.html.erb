<div class='container' id='signupBanner'>
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-4">Add a product</h1>
    </div>
  </div>
</div>
<div class='container'>
  <div id='signupForm' class='container'>
    <%= form_tag("/products/create",{multipart:true}) do %>
      <% @product.errors.full_messages.each do |message| %>
        <div class="alert alert-danger">
          <%= message %>
        </div>
      <% end %>
      <div class="form-group">
        Product Name
        <input class="form-control" name="name" value='<%= @name %>'>
      </div>
      <div class="form-group">
        Image
        <input type="file" class="form-control" name="image" value='<%= @image %>'>
      </div>
      <div class="form-group">
        Description
        <input class="form-control" name="description" value='<%= @description %>'>
      </div>
      <div class="form-group">
        Age (in years)
        <input class="form-control" name="age" value='<%= @age %>'>
      </div>
      <div class="form-group">
        Cost (in &#x20b9;)
        <input class="form-control" name="cost" value='<%= @cost %>'>
      </div>
      <button type="submit" class="btn btn-primary">Add</button>
    <% end %>
  </div>
</div>
